<!DOCTYPE html>
<head>
<link href="/css/product.css" rel="stylesheet">
</head>

<body>
    <table>
    <thead>
        <tr>
      <th>Product Image</th>
      <th>Product Name</th>
      <th>Product Price</th>
      <th>Product Category</th>
        </tr>
    </thead>

    <tbody>
        <% if (productList.length > 0) {  %>
        <%  productList.forEach(product => {   %>
            <tr>
                <td><img src="<%= product.thumbnail %>"></td>
                <td><%= product.title  %></td>
                <td><%= product.price  %></td>
                <td><%= product.category  %></td>

            </tr>
        <% }) %>
        <%  }  %>
    </tbody>
    </table>


</body>

</html>
